<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
      <table class="table table-hover">
        <tbody>
          <tr>
            <td><%= link_to attachment_image_tag(@books.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: '40x40'),user_path(@user) %><br>
                <%= link_to @user.name, user_path(@user) %></td>
            <td><%= @books.title %></td>
            <td><%= @books.body %></td>
            <% if @books.user_id == current_user.id %>
              <td><%= link_to "Edit", edit_book_path(@books) %>
                  <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "Are you sure?" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


