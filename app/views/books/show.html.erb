<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>

<h1>Book detail</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan= "4"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= link_to attachment_image_tag(@books.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"),user_path(@user) %><br>
          <%= link_to @user.name, user_path(@user) %></td>
      <td><%= @books.title %></td>
      <td><%= @books.body %></td>
      <% if @books.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@books) %>
            <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      <% end %>

    </tr>
  </tbody>
</table>


<%= render 'users/list', user: @user, book: @book %>