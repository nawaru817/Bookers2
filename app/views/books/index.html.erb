<% if @book.errors.any? %>
    <h5><div class="er"><%= @book.errors.count %> errors prohibited this book from being saved:</div></h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><div class="er"><%= message %></div></li>
      <% end %>
    </ul>
<% end %>

 <h1>Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books = Book.all %>
      <% @books.each do |book| %>
      <tr>
        <td>

        <%= link_to attachment_image_tag(book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"),user_path(book.user) %></td>

        </td>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<% @user = current_user %>
<%= render 'users/list', user: @user, book: @book %>