<% if @book.errors.any? %>
    <h5><div class="er"><%= @book.errors.count %> errors prohibited this book from being saved:</div></h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><div class="er"><%= message %></div></li>
      <% end %>
    </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <% @user = current_user %>
      <%= render 'users/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h1>Books</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Body</th>
            <th colspan="4"></th>
          </tr>
        </thead>
        <tbody>
          <% @books = Book.all %>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag(book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: '40x40'),user_path(book.user) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

