<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h1>Editing Book</h1>
      <%= form_with model:@book, local: true do |f| %>
        <% if @book.errors.any? %>
          <h5><div class="er"><%= @book.errors.count %> errors prohibited this book from being saved:</div></h5>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><div class="er"><%= message %></div></li>
            <% end %>
          </ul>
        <% end %>

        <div>Title</div>
        <div class="field"><%= f.text_field :title %></div>
        <div>Body</div>
        <div class="field"><%= f.text_area :body %></div>
        <div class="field"><%= f.submit 'Update Book' %></div>
      <% end %>

    <%= link_to "Show", book_path(@book) %>
    <%= "|" %>
    <%= link_to "Back", books_path %>
  </div>
</div>