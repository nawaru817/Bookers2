<% if @user.errors.any? %>
    <h5><div class="er"><%= @user.errors.count %> errors prohibited this book from being saved:</div></h5>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><div class="er"><%= message %></div></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-9">
      <h1>User info</h1>
      <%= form_with model:@user, url:"/users/#{@user.id}", local:true do |f| %>
        <label for="inputName">Name</label><br>
        <p><%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %></p>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <label for="inputImage">Image</label><br>
        <p><%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %></p>
        <label>Introduction</label><br>
        <%= f.text_area :introduction, autofocus: true, id:"inputText" %><br>
        <%= f.submit "Update User" %>
      <% end %>
    </div>
  </div>
</div>
