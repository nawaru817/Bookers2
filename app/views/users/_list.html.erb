
    <h1>User info</h1>
    <p><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></p>
    <div class="container">
  <div class="row">
    <table class="table col-md-12 px-0">
      <tbody>
        <tr>
          <td><strong>name:</strong></td>
          <td><%= user.name %></td>
        </tr>
        <tr>
          <td><strong>introduction:</strong></td>
          <td><%= user.introduction %></td>
      </tbody>
    </table>

    <p class="col-md-12 px-0"><%= link_to edit_user_path(user), class: "btn btn-block btn-outline-secondary btn-sm" do %>
    <i class="fas fa-user-cog"></i>
     <% end %>
    </p>
    </div>
    </div>

<h1>New book</h1>
<%= form_with model: book, local:true do |f| %>
  <label>Title</label><br>
  <%= f.text_field :title %><br>

  <label>Opinion</label><br>
  <%= f.text_area :body %><br>

  <button class="btn btn-secondary" type="submit">Create Book</button>
<% end %>