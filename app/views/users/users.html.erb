<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h1>Users</h1>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @userlist.each do |list| %>
            <tr>
              <td><%= attachment_image_tag list, :profile_image, :fill, 40, 40, fallback: "no_image.jpg",size: '40x40' %></td>
              <td><%= list.name %></td>
              <td><%= link_to "Show", user_path(list.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


